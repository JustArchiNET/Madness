{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		":assignee(JustArchi)",
		":automergeBranch",
		":automergeDigest",
		":automergeMinor",
		":disableDependencyDashboard",
		":disableRateLimiting",
		":label(ðŸ¤– Automatic)"
	],
	"packageRules": [
